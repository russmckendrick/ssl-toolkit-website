---
import { getCollection } from 'astro:content';
import DocsLayout from '../../layouts/DocsLayout.astro';

// Get the first doc (getting-started)
const docs = await getCollection('docs');
const sortedDocs = docs.sort((a, b) => a.data.order - b.data.order);
const firstDoc = sortedDocs[0];
const { Content } = await firstDoc.render();
---

<DocsLayout title={firstDoc.data.title} description={firstDoc.data.description} slug={firstDoc.slug}>
  <Content />
</DocsLayout>
