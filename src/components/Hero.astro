---

<section class="relative py-20 md:py-32 overflow-hidden">
  <!-- Background accents -->
  <div class="absolute inset-0 grid-bg opacity-30"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] rounded-full bg-tokyo-purple/5 blur-[120px]"></div>
  <div class="absolute bottom-0 right-0 w-[400px] h-[400px] rounded-full bg-tokyo-blue/5 blur-[100px]"></div>

  <div class="relative max-w-5xl mx-auto px-4 text-center">
    <!-- ASCII Banner -->
    <div class="relative inline-block animate-fade-in-up">
      <pre class="text-tokyo-purple font-mono text-[0.32rem] sm:text-[0.45rem] md:text-xs lg:text-sm leading-[1.1] banner-glow select-none whitespace-pre overflow-x-auto">{banner}</pre>
    </div>

    <!-- Tagline -->
    <div class="animate-fade-in-up animate-delay-1">
      <p class="mt-8 text-xl md:text-2xl font-mono font-bold gradient-text">
        SSL/TLS Certificate Diagnostic Tool
      </p>
      <p class="mt-4 text-sm md:text-base text-tokyo-text-dim max-w-xl mx-auto leading-relaxed">
        Comprehensive certificate analysis, security grading, and diagnostics from the command line. Written in Rust.
      </p>
    </div>

    <!-- Install CTA -->
    <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up animate-delay-2">
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-tokyo-purple/20 to-tokyo-blue/20 rounded-xl blur opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative flex items-center bg-tokyo-bg-dark border border-tokyo-border rounded-xl px-6 py-3.5 font-mono text-sm">
          <span class="text-tokyo-green mr-2">$</span>
          <span class="text-tokyo-text">brew install ssl-toolkit</span>
          <button
            id="hero-copy-btn"
            class="ml-4 text-tokyo-text-dim hover:text-tokyo-blue transition-colors cursor-pointer"
            aria-label="Copy install command"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2" stroke-width="2"/>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" stroke-width="2"/>
            </svg>
          </button>
        </div>
      </div>

      <a
        href="https://github.com/russmckendrick/ssl-toolkit"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center gap-2 bg-tokyo-bg-light/50 border border-tokyo-border rounded-xl px-6 py-3.5 font-mono text-sm text-tokyo-text-dim hover:text-tokyo-text hover:border-tokyo-blue/50 transition-all"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </div>

    <!-- Quick stats -->
    <div class="mt-12 flex items-center justify-center gap-8 text-xs font-mono text-tokyo-text-dim animate-fade-in-up animate-delay-3">
      <div class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-tokyo-green"></span>
        Written in Rust
      </div>
      <div class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-tokyo-blue"></span>
        MIT License
      </div>
      <div class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-tokyo-purple"></span>
        Cross-platform
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById('hero-copy-btn')?.addEventListener('click', () => {
    navigator.clipboard.writeText('brew install ssl-toolkit');
    const btn = document.getElementById('hero-copy-btn');
    if (btn) {
      btn.innerHTML = '<svg class="w-4 h-4 text-[#9ece6a]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
      setTimeout(() => {
        btn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><rect x="9" y="9" width="13" height="13" rx="2" ry="2" stroke-width="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" stroke-width="2"/></svg>';
      }, 2000);
    }
  });
</script>
