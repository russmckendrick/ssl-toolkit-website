---
const methods = [
  {
    title: 'Homebrew',
    label: 'macOS',
    commands: [
      { text: 'brew tap russmckendrick/tap', prompt: true },
      { text: 'brew install ssl-toolkit', prompt: true },
    ],
  },
  {
    title: 'GitHub Releases',
    label: 'Linux / macOS / Windows',
    commands: [
      { text: '# Download pre-built binaries from GitHub', comment: true },
      { text: '# Available for Linux (x86_64), macOS (x86_64, ARM), Windows (x86_64)', comment: true },
      { text: 'curl -sL https://github.com/russmckendrick/ssl-toolkit/releases/latest/download/ssl-toolkit-$(uname -s)-$(uname -m).tar.gz | tar xz', prompt: true },
      { text: 'sudo mv ssl-toolkit /usr/local/bin/', prompt: true },
    ],
  },
  {
    title: 'From Source',
    label: 'Rust',
    commands: [
      { text: 'git clone https://github.com/russmckendrick/ssl-toolkit.git', prompt: true },
      { text: 'cd ssl-toolkit', prompt: true },
      { text: 'cargo build --release', prompt: true },
      { text: 'cargo install --path .', prompt: true },
    ],
  },
];
---

<section id="installation" class="py-16 md:py-24 relative">
  <div class="section-divider max-w-4xl mx-auto mb-16"></div>

  <div class="max-w-4xl mx-auto px-4">
    <div class="text-center mb-14">
      <p class="font-mono text-xs text-tokyo-orange uppercase tracking-[0.2em] mb-3">Installation</p>
      <h2 class="text-2xl md:text-4xl font-bold text-tokyo-text">
        Get started in <span class="text-tokyo-green">seconds</span>
      </h2>
    </div>

    <div class="space-y-6">
      {methods.map((method) => (
        <div class="terminal-window rounded-xl overflow-hidden">
          <!-- Title bar -->
          <div class="flex items-center justify-between px-4 py-3 bg-tokyo-bg-dark/80 border-b border-tokyo-border/50">
            <div class="flex items-center gap-3">
              <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-tokyo-red/80"></div>
                <div class="w-3 h-3 rounded-full bg-tokyo-orange/80"></div>
                <div class="w-3 h-3 rounded-full bg-tokyo-green/80"></div>
              </div>
              <span class="text-xs font-mono text-tokyo-text-dim">{method.title}</span>
              <span class="text-[10px] font-mono text-tokyo-text-dim/50 border border-tokyo-border/40 rounded px-1.5 py-0.5">{method.label}</span>
            </div>
            <button
              class="copy-btn text-tokyo-text-dim hover:text-tokyo-blue transition-colors cursor-pointer"
              data-copy={method.commands.filter(c => c.prompt).map(c => c.text).join('\n')}
              aria-label={`Copy ${method.title} install commands`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2" stroke-width="2"/>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" stroke-width="2"/>
              </svg>
            </button>
          </div>
          <!-- Code block -->
          <div class="bg-tokyo-bg-dark p-5 md:p-6 font-mono text-xs md:text-[13px] overflow-x-auto leading-[1.8]">
            {method.commands.map((cmd) => (
              <div>
                {cmd.comment ? (
                  <span class="text-tokyo-text-dim">{cmd.text}</span>
                ) : (
                  <>
                    <span class="text-tokyo-green select-none">$ </span>
                    <span class="text-tokyo-text">{cmd.text}</span>
                  </>
                )}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.copy-btn[data-copy]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const text = (btn as HTMLElement).dataset.copy || '';
      navigator.clipboard.writeText(text);
      btn.innerHTML = '<svg class="w-4 h-4" style="color: #9ece6a" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
      setTimeout(() => {
        btn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><rect x="9" y="9" width="13" height="13" rx="2" ry="2" stroke-width="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" stroke-width="2"/></svg>';
      }, 2000);
    });
  });
</script>
