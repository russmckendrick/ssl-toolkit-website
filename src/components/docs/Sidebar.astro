---
import { getCollection } from 'astro:content';

interface Props {
  currentSlug?: string;
}

const { currentSlug } = Astro.props;

const docs = await getCollection('docs');
const sortedDocs = docs.sort((a, b) => a.data.order - b.data.order);
---

<aside class="docs-sidebar">
  <!-- Mobile header -->
  <div class="lg:hidden flex items-center justify-between p-4 border-b border-tokyo-border/50">
    <a href="/" class="flex items-center gap-2 font-mono text-sm font-bold text-tokyo-purple">
      <span>ssl-toolkit</span>
    </a>
    <button id="sidebar-toggle" class="p-2 text-tokyo-text-dim hover:text-tokyo-text cursor-pointer" aria-label="Toggle navigation">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Sidebar content -->
  <nav id="sidebar-nav" class="hidden lg:block p-6">
    <!-- Logo / Home link -->
    <a href="/" class="flex items-center gap-3 mb-8 group">
      <div class="w-8 h-8 rounded-lg bg-tokyo-purple/20 border border-tokyo-purple/30 flex items-center justify-center">
        <svg class="w-4 h-4 text-tokyo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      <span class="font-mono text-sm font-bold text-tokyo-text group-hover:text-tokyo-purple transition-colors">ssl-toolkit</span>
    </a>

    <!-- Navigation -->
    <div class="space-y-1">
      <p class="font-mono text-[10px] uppercase tracking-widest text-tokyo-text-dim mb-3 px-3">Documentation</p>
      
      {sortedDocs.map((doc) => {
        const isActive = currentSlug === doc.slug;
        return (
          <a
            href={`/docs/${doc.slug}/`}
            class:list={[
              'flex items-center gap-3 px-3 py-2 rounded-lg font-mono text-sm transition-all',
              isActive
                ? 'bg-tokyo-blue/10 text-tokyo-blue border-l-2 border-tokyo-blue'
                : 'text-tokyo-text-dim hover:text-tokyo-text hover:bg-tokyo-bg-light/30',
            ]}
          >
            <span class="w-1.5 h-1.5 rounded-full" style={isActive ? 'background: #7aa2f7' : 'background: #3b4261'}></span>
            {doc.data.title}
          </a>
        );
      })}
    </div>

    <!-- Footer links -->
    <div class="mt-12 pt-6 border-t border-tokyo-border/30">
      <a
        href="https://github.com/russmckendrick/ssl-toolkit"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-3 py-2 font-mono text-xs text-tokyo-text-dim hover:text-tokyo-text transition-colors"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </a>
      <a
        href="/"
        class="flex items-center gap-2 px-3 py-2 font-mono text-xs text-tokyo-text-dim hover:text-tokyo-text transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        Home
      </a>
    </div>
  </nav>
</aside>

<script>
  const toggle = document.getElementById('sidebar-toggle');
  const nav = document.getElementById('sidebar-nav');
  
  toggle?.addEventListener('click', () => {
    nav?.classList.toggle('hidden');
  });

  // Close on mobile when clicking a link
  nav?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', () => {
      if (window.innerWidth < 1024) {
        nav?.classList.add('hidden');
      }
    });
  });
</script>
